{
  "name": "Easy Doctor",
  "version": "1.0",
  "description": "For simplify doctor's note",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "manifest_version": 2,

  "page_action": {
    "default_icon": "icon.png",

    "default_title": "React CRX",

    "default_popup": "index.html"
  },

  "background": {
    "scripts": ["static/js/background.js"],

    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],

      "css": ["static/css/content.css"],

      "js": ["static/js/content.js"],

      "run_at": "document_end"
    }
  ],

  "permissions": ["tabs", "declarativeContent", "storage", "notifications"],
  "web_accessible_resources": ["insert.js"]
}
